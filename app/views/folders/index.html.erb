<body style="background-image: url('https://images.unsplash.com/photo-1444791252404-500e5b11f71b?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80'); background-repeat: no-repeat; background-size: cover; height: 65%vh;">


  <div style="margin:30px 0px">
    <h2>Your Collections</h2>
    <% @folders.each do |folder| %>
      <div class="folder-card" style="position:relative;">
        <%= link_to folder_path(folder), style:"text-decoration:none; color:white;" do %>
          <h1><%= folder.name %></h1>
        <% end %>
        <%= link_to folder_path(folder), data: { turbo_method: :delete }, style: "position:absolute; top: 0px; right: 8px;" do %>
          <i class="fa-solid fa-xmark" style="color: #00b8ff; font-size: 22px;"></i>
        <% end %>
        <%= link_to edit_folder_path(folder), style: "position:absolute; bottom: 0px; right: 8px;" do %>
          <i class="fa-solid fa-pen-to-square" style="color: #00b8ff; font-size: 20px;"></i>
        <% end %>
      </div>
    <% end %>

      <%= link_to new_folder_path, style: "position:absolute; top: 116px; right: 23px;" do %>
        <i class="fa-solid fa-folder-plus" style="color: #38b4ff; font-size: 36px;"></i>
      <% end %>
  </div>

</body>
