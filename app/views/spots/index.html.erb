<div style="position:relative">
  <% @spots.each do |spot| %>
    <% next if current_user.favorites.map { |favorite| favorite.favoritable.name }.include?(spot.name) %>
      <%= link_to spot_path(spot.id), style:"text-decoration:none; color:black;" do %>
        <div class="card-index" style="position:absolute; background-image: url('<%= spot.photo %>'); background-size: cover;">
            <h1><%= spot.name %></h1>
            <%= link_to toggle_favorite_spot_path(spot), data: { turbo_method: :post }, style: "position: absolute; bottom: 27px; right: 86px;" do %>
              <i class="fa-brands fa-gratipay" style="color: #38b4ff; font-size: 62px;"></i>
            <% end %>
            <%= link_to dislike_spot_path(spot), data: { turbo_method: :post }, style: "position: absolute; bottom: 27px; left: 86px;" do %>
              <i class="fa-solid fa-circle-xmark" style="color: #e61e1e; font-size: 62px;"></i>
            <% end %>
        </div>
      <% end %>
  <% end %>
</div>

