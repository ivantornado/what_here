<div style="position:relative; height: 100%">
  <% @spots.each do |spot| %>
    <% next if current_user.favorites.map { |favorite| favorite.favoritable.name }.include?(spot.name) %>
      <%= link_to spot_path(spot.id), style:"text-decoration:none" do %>
        <div class="card-index" style="position:absolute; background-image: url('<%= spot.photo %>'); background-size: cover;">
          <div class="card-info">
            <span class="badge rounded-pill pink ms-2"><%= spot.category %></span>
            <h1><%= spot.name %></h1>
            <p style="padding-bottom: 4px; padding-top: 0px;">📍<%= spot.spot_location %></p>
          </div>
        </div>
      <% end %>
      <%= link_to toggle_favorite_spot_path(spot), data: { turbo_method: :post }, style: "position: absolute; bottom: 95px; right: 30px;text-decoration: none;" do %>
        <div class='like-button'> <i class="fa-solid fa-heart"></i> </div>
      <% end %>
      <%= link_to dislike_spot_path(spot), data: { turbo_method: :post }, style: "position: absolute; bottom: 95px; left: 30px; text-decoration: none;" do %>
        <div class='no-button'> <i class="fa-solid fa-xmark"></i> </div>
      <% end %>
  <% end %>
</div>



<br>
<h3>No more results in your area...</h3>

