  </head>

  <body>
    <div class="page-container" style="height: 100%;">
      <%= render "shared/navbar" %>
        <%= render "shared/flashes" %>
      <main id="main-content">
        <%= yield %>
      </main>
      <%= render "shared/footer" %>
    </div>
 </body>
</html>
